<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.healthconnect.controller">

  <uses-permission android:name="android.permission.MANAGE_HEALTH_PERMISSIONS" />

  <application
      android:icon="@drawable/health_connect_logo"
      android:label="@string/app_label"
      android:supportsRtl="true"
      android:name=".HealthConnectApplication"
      android:theme="@style/Theme.HealthConnect">
    <activity
        android:name=".MainActivity"
        android:exported="true">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.DEFAULT" />
      </intent-filter>
      <!-- For Open button in App Info. -->
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.INFO"/>
      </intent-filter>
    </activity>
    <activity android:name="com.android.healthconnect.controller.permissions.PermissionsActivity"
        android:excludeFromRecents="true"
        android:exported="true"
        android:noHistory="true">
      <intent-filter android:priority="1">
        <action android:name="android.intent.action.MANAGE_HEALTH_PERMISSIONS" />
        <category android:name="android.intent.category.DEFAULT" />
      </intent-filter>
    </activity>
  </application>

</manifest>